<p id="notice"><%= notice %></p>

<div style="margin-top:50px;" class="row">
  <div class="col-lg-12">
    <h1>All Transactions</h1>
  </div>
</div>

<table>
  <thead>
    <tr>

      <th>Stock</th>
      <th>Shares</th>
      <th>Profit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
  
        <td><%= purchase.stock_id %></td>
        <td><%= purchase.shares %></td>
        <td><%= purchase.profit %></td>
        <td><%= link_to 'Show', purchase %></td>
        <% if current_user.admin? %><td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase', new_purchase_path %>
