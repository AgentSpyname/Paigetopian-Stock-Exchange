<% content_for :title, "NSX - The Paigetopian Stock Market" %>
<div class="row">
  <div style="margin-top:20px;" class="col-lg-12 col-md-12 col-sm-12">
<h1>NSX</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Shares</th>
      <th>Shares Left</th>
      <th>Today's Value</th>
      
      <th colspan="2">More Info</th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.total_shares %></td>
        <td><%= stock.shares_left %></td>
        <td><%= stock.value %></td>
      
        <td><%= link_to 'Show', stock %></td>
        <% if current_user.admin? %><td><%= link_to 'Edit', edit_stock_path(stock) %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Buy Stock', new_purchase_path, class: 'btn btn-success' %>
<%= link_to 'Sell Stock', new_sale_path, class:'btn btn-danger'  %>

<% if current_user.admin? %>
<%= link_to "Create Stock", new_stock_path, class: 'btn btn-primary' %>
<% end %>
</div>
</div>