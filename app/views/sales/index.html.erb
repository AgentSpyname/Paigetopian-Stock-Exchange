<p id="notice"><%= notice %></p>

<h1>Listing Sales</h1>

<table>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Shares</th>
      <th>Profit</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.stock_id %></td>
        <td><%= sale.shares %></td>
        <td><%= sale.profit %></td>
        <td><%= sale.user.name %></td>

        <td><%= link_to 'Show', sale %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale', new_sale_path %>
