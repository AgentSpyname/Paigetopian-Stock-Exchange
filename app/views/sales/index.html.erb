<% if current_user.admin? %>
<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">Sales</h2>

<table class="table">
  <thead>
    <tr>
      <th>Stock</th>
      <th>Shares</th>
      <th>Profit</th>
      <th>User</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.stock.name %></td>
        <td><%= sale.shares %></td>
        <td><%= sale.profit %></td>
        <td><%= sale.user.name %></td>

        <td><%= link_to 'Show', sale %></td>
       
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  </div>
</div>
<% end %>