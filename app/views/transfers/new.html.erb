<% content_for :title, "Make A Transfer - The Paigetopian Stock Market" %>
<div class="row">
    <div style = "margin-top:20px;" class="col-lg-12 col-md-12 col-sm-12">
        <h2 class="page-header">New Transfer</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <%= form_for(@transfer) do |f| %>
  <% if @transfer.errors.any? %>
