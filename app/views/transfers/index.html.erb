<% content_for :title, "Transfers - The Paigetopian Stock Market" %>
<% if current_user.admin? %>
<div class="row">
  <div class="col-lg-12">
<h2 class="page-header">All Transfers</h2>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.amount %></td>
        <td><%= transfer.status %></td>
        <td><%= transfer.user.name %></td>
        <td><%= link_to 'View', transfer %></td>
        <td><%= link_to 'Modify/Approve', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Reject', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>
<% end %>
